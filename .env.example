PORT=3000

# MongoDB Connection String
# For local MongoDB (default):
MONGO_URI=mongodb://localhost:27017/darshan

# For MongoDB Atlas (cloud database - recommended for live):
# 1. Create account at https://www.mongodb.com/cloud/atlas
# 2. Create a free cluster
# 3. Get your connection string and replace below
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/darshan?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string
JWT_EXPIRES_IN=24h

# CORS - Allowed Origins
# Use * to allow all origins (good for development, use specific URLs for production)
# For specific origins: http://localhost:3000,https://your-frontend-domain.com
CORS_ORIGIN=*

# SMTP â€“ Loan EMI reminder emails (3 days before due date)
# All reminders are sent to the single REMINDER_EMAIL below (one mail per loan due in 3 days)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# MAIL_FROM=Darshan Reminder <your-email@gmail.com>
# REMINDER_EMAIL=your-notification@example.com

# Login OTP: set to 1 to send OTP only to REMINDER_EMAIL (e.g. one inbox for all). Omit or 0 to send to each user's email.
# OTP_SEND_TO_REMINDER_ONLY=1

# Cron for reminder: default 8:00 AM daily (minute hour day month weekday)
# LOAN_REMINDER_CRON=0 8 * * *
